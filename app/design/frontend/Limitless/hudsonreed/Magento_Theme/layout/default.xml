<?xml version="1.0"?>

<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="wish-list-link" remove="true" />
        <referenceBlock name="invitation_link_top" remove="true" />
        <referenceBlock name="multiple-wish-list-link" remove="true" />
        <referenceBlock name="catalog.compare.link" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true" />
        <referenceBlock name="catalogsearch.product.addto.compare" remove="true" />
        <referenceBlock name="category.product.addto.compare" remove="true" />
        <referenceBlock name="view.addto.compare" remove="true" />
        <referenceBlock name="related.product.addto.compare" remove="true" />
        <referenceBlock name="upsell.product.addto.compare" remove="true" />
        <referenceBlock name="crosssell.product.addto.compare" remove="true" />
        <referenceBlock name="view.addto.compare.bundle" remove="true" />
        <referenceBlock name="sale.reorder.sidebar" remove="true" />

        <referenceBlock name="header-wrapper">
            <block class="Magento\Framework\View\Element\Template" name="myaccount.link" template="Magento_Theme::hr-myaccount-link.phtml" after="minicart" />
        </referenceBlock>

        <referenceContainer name="footer-container">
            <block class="Magento\Cms\Block\Block" name="trustpilot_footer_widget" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">trustpilot_footer_widget</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="footer.payment" template="Magento_Theme::hr-footer-payment.phtml" after="-" />
        </referenceContainer>

        <referenceContainer name="footer-container">
            <container name="footer.links.container" as="footer.links.container" htmlTag="div" htmlClass="footer-links-container" before="footer.payment"/>
        </referenceContainer>

        <referenceBlock name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.links" template="Magento_Theme::hr-footer-links.phtml" after="-" />
            <block class="Magento\Framework\View\Element\Template" name="social.links" template="Magento_Theme::hr-social-links.phtml" after="-" />
        </referenceBlock>

        <move element="copyright" destination="footer" after="social.links" />

        <move element="form.subscribe" destination="footer" after="social.links" />

        <move element="footer" destination="footer.links.container" after="-" />

    </body>
</page>
