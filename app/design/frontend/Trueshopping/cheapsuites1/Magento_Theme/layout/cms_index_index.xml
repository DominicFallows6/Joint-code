<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="page.top">
            <block class="Magento\Cms\Block\Block" name="homepageBanners" before="reasonsNav">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage_banners</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Category\View" name="homePageCategories" template="category/homepage.phtml" />
        </referenceContainer>
        <referenceBlock name="breadcrumbs" remove="true" />
        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>