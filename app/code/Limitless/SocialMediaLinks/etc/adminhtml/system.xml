<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="general">
            <group id="limitless_social_media" translate="label" sortOrder="999" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Social Media Links</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="social_header" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Social Header</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Social Media Header. If blank no header will show.</comment>
                </field>
                <field id="social_theme" translate="true" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Icon Colour</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please select the colour for the icons.</comment>
                    <source_model>Limitless\SocialMediaLinks\Model\Config\Source\Custom</source_model>
                </field>
                <field id="custom_background" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Icon background colour</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter custom background colour in hex format e.g. #EFEFEF. Leave blank for no background colour.</comment>
                </field>
                <field id="icon_border_colour" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Icon border colour</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter icon border colour in hex format e.g.#EFEFEF. Leave blank for no border.</comment>
                </field>
                <field id="icon_height" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Icon height and width</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter height and width for icon in px. e.g. 30px. Leave blank to use default.</comment>
                </field>
                <field id="facebook_link" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Facebook Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Facebook Link</comment>
                </field>
                <field id="twitter_link" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Twitter Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Twitter Link</comment>
                </field>
                <field id="pinterest_link" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Pinterest Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Pinterest Link</comment>
                </field>
                <field id="google_plus_link" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Google + Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Social Media Link</comment>
                </field>
                <field id="youtube_link" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>YouTube Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter YouTube Link</comment>
                </field>
                <field id="instagram_link" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Instagram Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Instagram Link</comment>
                </field>
                <field id="blog_link" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Blog Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Blog Link</comment>
                </field>
                <field id="houzz_link" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Houzz Link</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please enter Houzz Link</comment>
                </field>
                <field id="show_label" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Social Label</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Show label next to  icon?</comment>
                </field>
            </group>
        </section>
    </system>
</config>