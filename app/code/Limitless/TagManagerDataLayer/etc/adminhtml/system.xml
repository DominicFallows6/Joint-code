<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>

        <section id="google">

            <group id="limitless_tagmanager_datalayer" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Limitless GTM DataLayer</label>

                <group id="general_settings" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>General Settings</label>

                    <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="datalayer_name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Data Layer Key Name</label>
                        <comment>Default to "limitless_dl"</comment>
                        <depends>
                            <field id="enabled">1</field>
                        </depends>
                    </field>
                </group>

                <group id="affiliate_tracking" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Affiliate Tracking Settings</label>
                    <depends>
                        <field id="google/limitless_tagmanager_datalayer/general_settings/enabled">1</field>
                    </depends>

                    <field id="affiliate_url_param" translate="label comment"  sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Affilate URL Parameter</label>
                        <comment>URL Parameter to determine Affiliate</comment>
                    </field>
                    <field id="affiliate_cookie_name" translate="label"  sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Affiliate Cookie Name</label>
                    </field>
                    <field id="enabled_affiliates" translate="label comment" type="textarea" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enabled Affiliates with URL Code</label>
                        <comment>Affiliate Name : URL Value</comment>
                    </field>

                    <group id="webgains" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Webgains</label>
                        <field id="webgains_tracking_event_id" translate="label comment"  sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Webgains Tracking ID</label>
                            <comment>Needed for Webgains Items List (must match in GTM)</comment>
                        </field>
                        <field id="webgains_comment" translate="label"  sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Webgains Comment</label>
                        </field>
                        <field id="webgains_total_vat_setting" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>VAT Settings</label>
                            <source_model>Limitless\TagManagerDataLayer\Model\Source\VatSettingList</source_model>
                        </field>
                        <field id="webgains_total_shipping_setting" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Shipping Settings</label>
                            <source_model>Limitless\TagManagerDataLayer\Model\Source\ShippingSettingList</source_model>
                        </field>
                    </group>
                </group>

                <group id="dynamic_remarketing" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Dynamic Remarketing Settings</label>
                    <depends>
                        <field id="google/limitless_tagmanager_datalayer/general_settings/enabled">1</field>
                    </depends>

                    <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>This will only disable variables in DataLayer: You will need to disable in GTM</comment>
                    </field>

                    <field id="product_id_value" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Use for Product Id</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\ProductIdValueList</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>

                    <field id="product_id_prefix" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Product Id Prefix</label>
                        <depends><field id="enabled">1</field></depends>
                    </field>

                    <field id="total_vat_setting" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>VAT Settings For Total</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\VatSettingList</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>

                    <field id="total_shipping_setting" translate="label" type="select" sortOrder="54" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Shipping Settings For Total</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\ShippingSettingList</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>

                    <field id="total_display_summary" translate="label" type="select" sortOrder="58" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Display prodvalue as Individual or Line Totals in Cart / Purcahse</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\ProductTotalSummary</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>

                    <field id="max_products_displayed" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Max number of products to display in Catalog / Search / Cart / Purchase</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\MaxProductsToDisplay</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>
                </group>

                <group id="leguide" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>LeGuide Settings</label>
                    <depends>
                        <field id="google/limitless_tagmanager_datalayer/general_settings/enabled">1</field>
                    </depends>

                    <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>This will only disable variables in DataLayer: You will need to disable in GTM</comment>
                    </field>
                    <field id="leguide_total_vat_setting" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>VAT Settings</label>
                        <source_model>Limitless\TagManagerDataLayer\Model\Source\VatSettingList</source_model>
                        <depends><field id="enabled">1</field></depends>
                    </field>
                </group>

            </group>
        </section>
    </system>
</config>