        <referenceContainer name="page.top">
            <block name="homepage.banner"
                   class="Limitless\HomepageBanner\Block\View"
                   template="Limitless_HomepageBanner::banner-template.phtml"
                   after="-"
                   ifconfig="general/limitless_homepage_banner/enabled"/>
        </referenceContainer>
    </body>
</page>