<?php
/**
 * Category view template
 *
 * @var $block \Limitless\CustomCategory\Block\Category\View
 */
?>
<?php if ($_description = $block->getCurrentCategory()->getDescription()): ?>
    <div class="category-description">
        <div class="cat-desc-title">
            <h2>
                <?php
                if ($block->getCustomHeading()) {
                    /* @escapeNotVerified */
                    echo $block->getCustomHeading();
                } else {
                    /* @escapeNotVerified */
                    echo $block->getCurrentCategory()->getName();
                }
                ?>
            </h2>
        </div>
        <div class="cat-desc-text">
            <p>
                <?php
                if ($block->getCustomCategoryDescription()){
                    /* @escapeNotVerified */
                    echo $block->getCustomCategoryDescription();
                } else {
                    /* @escapeNotVerified */
                    echo $this->helper('Magento\Catalog\Helper\Output')->categoryAttribute($block->getCurrentCategory(), $_description, 'description');
                }
                ?>
            </p>
        </div>
    </div>
<?php endif; ?>
