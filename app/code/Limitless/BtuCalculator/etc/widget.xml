<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="btu_calculator" class="Limitless\BtuCalculator\Block\Widget\BtuCalculator"
            placeholder_image="Limitless_BtuCalculator::images/btu_widget_block.png">
        <label>BTU Calculator</label>
        <description>Show BTU Calculator</description>
        <parameters>
            <parameter name="btu" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="10">
                <label>BTU Display</label>
                <description>Display BTU results and watts. Select No just to use watts.</description>
            </parameter>
            <parameter name="css_changes" xsi:type="block" visible="true" sort_order="20">
                <label>Custom CSS</label>
                <block class="Limitless\BtuCalculator\Block\Adminhtml\Widget\TextField" />
            </parameter>
            <parameter name="filter_output_url" xsi:type="text" visible="true" sort_order="30">
                <label>Enter Url for category</label>
                <description>Please enter url and attribute code e.g. /radiators?filter_output</description>
            </parameter>
        </parameters>
    </widget>
</widgets>