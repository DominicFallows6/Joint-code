                <field id="featured_three_image" translate="label" type="image" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Featured Products Three Image</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">featured</upload_dir>
                    <base_url type="media" scope_info="1">featured</base_url>
                    <depends>
                        <field id="featured_three_enabled">1</field>
                    </depends>
                    <comment>Please upload your image in jpg, png, or gif format. Image dimensions 390px x 390px.</comment>
                </field>
                <field id="featured_four_enabled" translate="label" type="select" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
