                <field id="featured_two_url" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <validate>required-entry</validate>
                    <label>Featured Products Two Url</label>
                    <comment>Please enter your url</comment>
                    <depends>
                        <field id="featured_two_enabled">1</field>
                    </depends>
                </field>
                <field id="featured_two_image" translate="label" type="image" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Featured Products Two Image</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
