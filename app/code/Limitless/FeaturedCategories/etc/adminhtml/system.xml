                <field id="featured_three_sub_title" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Featured Products Three Sub Title</label>
                    <depends>
                        <field id="featured_three_enabled">1</field>
