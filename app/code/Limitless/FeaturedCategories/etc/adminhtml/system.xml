                    <depends>
                        <field id="featured_four_enabled">1</field>
                    </depends>
                    <comment>Please upload your image in jpg, png, or gif format. Image dimensions 390px x 390px.</comment>
                </field>
                <field id="featured_five_enabled" translate="label" type="select" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Featured Products Side Feature</label>
